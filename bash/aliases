#Nightscout
function ns-start {
	cd ~/cgm-remote-monitor
	env $(cat my.env) pm2 start server.js
}

function ns-restart {
	cd ~/cgm-remote-monitor
	env $(cat my.env) pm2 restart server.js
}
# top
alias top="htop"

# history (then use !XXX to run cmd)
alias h='history'

# navigation
alias ..="cd .." # back one directory
alias ls="ls -lGh"
alias c='clear'

function cdl {
	cd $1
	ls -lGh
}

function take {
	mkdir $1
	cd $1
}

#reload 
alias reload=". ~/.bash_profile"
alias ea="mate -w ~/bin/dotfiles/bash/aliases && reload"

#rsync
function dsync {
	rsync -avl --progress --stats $1 $2
}

function ddsync {
	rsync -avl --progress --stats --delete $1 $2
}


#TTFN
alias ttfn='exit'

#git
alias gb="git branch"
alias gc='git commit -v'
alias gl='git pull'
alias gp='git push'
alias gst='git status'
alias lol='git log --pretty=oneline --abbrev-commit --graph --decorate'
alias ga='git add'

#install-key
alias ik='install-key'

#Ubuntu stuff 
alias update='sudo apt-get update'
alias upgrade='sudo apt-get upgrade'
alias version='lsb_release -a'

#mysql moving
function dbdump {
	mysqldump -v -u root -p --compatible=mysql40 $1 > $2
}

function dbin {
	mysql -v -u root -p $1 < $2
}
# Get Public IP
alias ip="curl icanhazip.com"

# OS X things
alias dns="dscacheutil -flushcache"
alias dock="killall Dock"

#Tell Me About cha
alias about="uname -a && head -n1 /etc/issue"

#OpenAPS
#Tail syslog grepped openaps-loop
alias tt="tail -f /var/log/syslog | grep openaps-loop"
