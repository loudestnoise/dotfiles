# top
alias top="htop"

alias h='history'

# navigation
alias ..="cd .." # back one directory
alias ls="ls -lGh"
alias c='clear'

function cdl {
	cd $1
	ls -lGh
}

#reload 
alias reload="source ~/.bashrc"
alias ea="mate -w ~/bin/dotfiles/bash/aliases && reload"

function take {
	mkdir $1
	cd $1
}

#rsync
function dsync {
	rsync -avl --progress --stats $1 $2
}

function ddsync {
	rsync -avl --progress --stats --delete $1 $2
}
#s3
alias s3cmd="s3cmd.rb"

#dns flush for OS X
alias dns="dscacheutil -flushcache"

#GTFO
alias gtfo='exit'

#git
alias gb="git branch"
alias gc='git commit -v'
alias gl='git pull'
alias gp='git push'
alias gst='git status'
alias lol='git log --pretty=oneline --abbrev-commit --graph --decorate'
#install-key
alias ik='install-key'

#Ubuntu updates
alias update='sudo apt-get update'
alias upgrade='sudo apt-get upgrade'

#mysql moving
function dbdump {
	mysqldump -v -u root -p --compatible=mysql40 $1 > $2
}

function dbin {
	mysql -v -u root -p $1 < $2
}

